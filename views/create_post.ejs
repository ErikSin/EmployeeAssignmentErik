<%- include ('partials/head.ejs') %>


<body class="login-register">
    <div class="center-container post-create ">
        <h1>Create New Post</h1> <br>
        
        <form class="userInfo post-form" method="POST" action="" encType="multipart/form-data">
            <div>
                <label for="post-title">Title:</label>
                <input type="text" id="post-title" name="postTitle" required/>
            </div>
            <div>
                <label for="content">Description:</label> <br>
                <textarea name="content" id="content" cols="30" rows="10" required></textarea>
            </div>
            <div>
                <label for="thePhoto">Upload a photo:</label> <br>
                <input type="file" id="thePhoto" name="thePhoto" accept="image/*" required>
            </div>
            <div class="tags">
                <label>Tags:</label> <br>
                <input type="text" id="tag1" name="tag1" /> <br>
                <input type="text" id="tag2" name="tag2" /> <br>
                <input type="text" id="tag3" name="tag3" />
            </div>
        
            <button type="submit">Create Post</button>
            <button type="reset">Clear</button>
        </form>
    </div>
</body>

</html>